{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "es7"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__test__/**/*.ts",
    "node_modules",
    "lib",
    "example"
  ]
}
